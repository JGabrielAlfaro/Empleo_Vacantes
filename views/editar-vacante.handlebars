<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
        <h3>Informaci贸n General</h3>
        <div class="campo">
            <label for="titulo">Titulo de la vacante</label>
            <input type="text" name="titulo" id="titulo" placeholder="Ej: React Developer" value="{{vacante.titulo}}" required>
        </div>

        <div class="campo">
            <label for="empresa" >Empresa</label>
            <input type="text" name="empresa" id="empresa" placeholder="Empresa Contrata" value="{{vacante.empresa}}" required>
        </div>

        <div class="campo">
            <label for="ubicacion" >Ubicaci贸n</label>
            <input type="text" name="ubicacion" id="ubicacion" placeholder="Ej: Costa Rica o remoto" value="{{vacante.ubicacion}}" required>
        </div>

        <div class="campo">
            <label for="salario" >Salario (USD)</label>
            <input type="text" name="salario"  id="salario" placeholder="Ej: 500 USD" value="{{vacante.salario}}" required>
        </div>
        <div class="campo">
            <label for="contrato" >Contrato</label>
            <select name="contrato" id="contrato">
                {{#tipoContrato vacante.contrato}}
                    <option value="" disabled selected>--Selecciona--</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Tiempo Completo">Tiempo Completo</option>
                    <option value="Medio Tiempo">Medio Tiempo</option>
                    <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>
        <h3>Descripci贸n del Puesto</h3>

        <div class="campo descripcion">
            <label for="descripcion" id="descripcion">Descripci贸n</label>
            <input type="hidden" id="x" name="descripcion" value="{{{vacante.descripcion}}}">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        {{!-- <p>vacante.skills</p> --}}
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>

    </form>


</main>