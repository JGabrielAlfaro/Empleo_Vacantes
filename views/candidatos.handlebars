<main class="lista-candidatos">
    <h2>Lista de candidatos</h2>
    {{#if candidatos.length}}
        {{#each candidatos}}
            <div class="candidato">
                <div class="caja">
                    <p class="etiqueta">Nombre</p>
                    <p class="nombre">{{nombre}}</p>
                </div>
                <div class="caja">
                    <p class="etiqueta">Email</p>
                    <p class="email">{{email}}</p>
                </div>
                <div class="caja">
                    <a href="/uploads/cv/{{cv}}" class="btn btn-verde">Ver CV</a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>No hay Candidatos por el momento</p>
    {{/if}}
</main>